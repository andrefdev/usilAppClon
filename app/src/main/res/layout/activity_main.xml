<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#284587" android:backgroundTint="#284587"
        android:foregroundTintMode="add" android:alpha="1"
        android:foregroundGravity="fill_horizontal" android:forceHasOverlappingRendering="false">

    <include
            layout="@layout/toolbar_layout"
            android:id="@+id/toolbar"/>
    <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:id="@+id/foto"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/codigoTextField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearance="@style/roundedImageView"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:background="@drawable/image"
    />
    <TextView
            android:text="TextView"
            android:layout_width="116dp"
            android:layout_height="51dp" android:id="@+id/hora"
            android:textSize="28sp" android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:fontFamily="@font/baloo_bhai_2_semibold" app:layout_constraintTop_toBottomOf="@+id/fecha"/>
    <TextView
            android:layout_width="404dp"
            android:layout_height="42dp" android:id="@+id/nombreTextField"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:text="nmbreo" android:textSize="24sp"
            android:textAlignment="center" android:textColor="#FFFFFF"
            android:fontFamily="@font/baloo_bhai_2_semibold" app:layout_constraintHorizontal_bias="0.428"/>
    <TextView
            android:text="cdigoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/codigoTextField"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp" android:textAlignment="textStart"
            android:textColor="#FFFFFF" app:layout_constraintTop_toBottomOf="@+id/nombreTextField"
            android:fontFamily="@font/baloo_bhai_2_semibold"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/matriculado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:textColor="@color/white" android:fontFamily="@font/baloo_bhai_2_semibold"
            app:layout_constraintHorizontal_bias="0.498"
            android:textSize="18sp" android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/foto"/>
    <ImageView
            android:layout_width="287dp"
            android:layout_height="285dp" app:srcCompat="@drawable/qrcode" android:id="@+id/qr_image_view"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/matriculado"/>
    <TextView
            android:text="fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fecha"
            android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/qr_image_view"
            android:textColor="@color/white" android:fontFamily="@font/baloo_bhai_2_semibold" android:textSize="16sp"/>
    <ImageView
            android:layout_width="402dp"
            android:layout_height="347dp" app:srcCompat="@drawable/usil_logo_vector" android:id="@+id/imageView2"
            android:visibility="visible"
            tools:visibility="visible" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:alpha="0.1" android:rotation="-38"
            android:translationX="120dp" android:translationY="90dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>